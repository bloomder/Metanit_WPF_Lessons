<Window x:Class="WrapPanel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WrapPanel"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="500">
    <WrapPanel ItemHeight="50" ItemWidth="70" Orientation="Vertical">
        <TextBlock Text="TextBlock1" Background="BlueViolet" Padding="5"/>
        <TextBlock Text="TextBlock2" Background="AliceBlue" Padding="5"/>
        <TextBlock Text="TextBlock3" Background="Chocolate" Padding="5"/>
        <TextBlock Text="TextBlock4" Background="DarkCyan" Padding="5"/>
        <TextBlock Text="TextBlock5" Background="DarkSeaGreen" Padding="5"/>
    </WrapPanel>
</Window>
